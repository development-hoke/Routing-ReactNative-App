{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "lib": ["dom", "dom.iterable", "esnext"],
    "lib": [
      "es2015",
      "es2016"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "app/*": [
        "./*"
      ]
    },
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "build",
    "rootDir": "src"
  },
  "compileOnSave": false,
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "App.js",
    "App.test.js",
    "build"
  ]
}
